<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/MatchParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ListView
        android:id="@+id/conversation_list_listview"
        android:visibility="gone"
        style="@style/ConversationListListView"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/conversation_list_no_content_label"
        android:layout_centerInParent="true"
        android:text="@string/conversation_list_no_content"
        android:visibility="gone"
        style="@style/ConversationListNoContentLabel"
        tools:visibility="visible"
        />

</RelativeLayout>