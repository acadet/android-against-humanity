<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    style="@style/AdapterConversationList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:orientation="vertical"
        style="@style/HorizontalStretchable"
        >

        <TextView
            android:id="@+id/adapter_conversation_list_slug"
            style="@style/AdapterConversationListSlug"
            tools:text="My Conversation"
            />

        <TextView
            android:id="@+id/adapter_conversation_list_updated_at"
            style="@style/AdapterConversationListUpdatedAt"
            tools:text="45 minutes ago"
            />

    </LinearLayout>

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_arrow_right"
        style="@style/AdapterConversationListIcon"
        />

</LinearLayout>