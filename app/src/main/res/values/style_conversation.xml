<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ConversationListView" parent="MatchParent">
        <item name="android:padding">@dimen/layout_margin</item>

        <item name="android:background">@color/light_gray</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">@dimen/layout_margin</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:stackFromBottom">true</item>
        <item name="android:transcriptMode">alwaysScroll</item>
    </style>

    <style name="ConversationNoMessageLabel" parent="WrapContent">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/display1</item>
    </style>
</resources>