<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ConversationListView" parent="MatchParent">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

        <item name="android:background">@color/light_gray</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:stackFromBottom">true</item>
        <item name="android:transcriptMode">alwaysScroll</item>
    </style>

    <style name="ConversationNoMessageLabel" parent="WrapContent">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/display1</item>
    </style>
</resources>