<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdapterMessageList" parent="MatchParentWrapContent">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">@dimen/layout_margin</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">@dimen/layout_margin</item>
    </style>

    <style name="AdapterMessageListInnerWrapper" parent="MatchParentWrapContent.Vertical">
        <item name="android:padding">@dimen/layout_margin</item>
        <item name="android:background">@drawable/message_background</item>
    </style>

    <style name="AdapterMessageListContent" parent="MatchParentWrapContent">
        <item name="android:layout_marginBottom">10dp</item>

        <item name="android:textSize">@dimen/subhead</item>
    </style>

    <style name="AdapterMessageListLabel" parent="HorizontalStretchable">
        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>