<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ConversationActions" parent="MatchParentWrapContent">
        <item name="android:padding">@dimen/layout_margin</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ConversationActionsBar" parent="MatchParentWrapContent.Horizontal">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ConversationActionsLabel" parent="HorizontalStretchable">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/caption</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>